<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:nativeControls="clr-namespace:AvaloniaScrollViewerExample.NativeControls"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="AvaloniaScrollViewerExample.MainWindow"
        Title="AvaloniaScrollViewerExample-0.10.x">
    <ScrollViewer HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
        <StackPanel>
            <Panel HorizontalAlignment="Stretch"
                   Height="300"
                   Background="Red"/>
            <Panel HorizontalAlignment="Stretch"
                   Height="40"
                   Background="Blue"/>
            <nativeControls:EmbedSample HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Height="500"
                                        Width="500"/>
            <Panel HorizontalAlignment="Stretch"
                   Height="40"
                   Background="Blue"/>
            <Panel HorizontalAlignment="Stretch"
                   Height="300"
                   Background="Red"/>
        </StackPanel>
    </ScrollViewer>
</Window>
